      "runtimeArgs": ["run", "dev", "--", "--host=127.0.0.1"],
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "  âžœ  Local:   http://127.0.0.1:([0-9]+)/",
